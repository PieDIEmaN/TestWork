<Window x:Class="TestUnit.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Processing..." Height="150" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        ShowInTaskbar="False" WindowStyle="ToolWindow">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Processing image..." FontSize="14" Margin="0,0,0,10"/>
            <ProgressBar x:Name="ProgressBarProcessing" Height="20" Width="300" IsIndeterminate="True"/>
            <Button Content="Cancel" Width="100" Height="30" Click="Cancel_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
